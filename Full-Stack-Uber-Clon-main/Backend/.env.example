# MongoDB Connection String
DB_CONNECT=mongodb+srv://username:password@cluster.xxxxx.mongodb.net/uber-clone?retryWrites=true&w=majority

# Google Maps API Key
GOOGLE_MAPS_API=your_google_maps_api_key_here

# JWT Secret (generate a strong random string)
JWT_SECRET=your_super_secret_jwt_key_here_make_it_long_and_random

# Server Port (optional, defaults to 3000)
PORT=3000

# Frontend URL for CORS (set this to your Vercel frontend URL)
FRONTEND_URL=https://your-frontend.vercel.app
